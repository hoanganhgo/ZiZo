<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar_Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/bg_home"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_marginTop="-20dp"
        android:src="@drawable/bg_home" />

    <Button
        android:id="@+id/btn_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/avatar"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/sky"/>

    <TextView
        android:id="@+id/nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/avatar"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/imageSumLikes"
        android:layout_width="32sp"
        android:layout_height="32sp"
        android:src="@drawable/pink_heart"
        android:layout_below="@+id/nickName"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20sp"/>

    <TextView
        android:id="@+id/sumLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@+id/nickName"
        android:layout_toEndOf="@+id/imageSumLikes"
        android:layout_marginTop="13dp"
        android:layout_marginStart="7sp"/>

    <ImageView
        android:id="@+id/imageSumComments"
        android:layout_width="32sp"
        android:layout_height="32sp"
        android:src="@drawable/comment"
        android:layout_below="@+id/nickName"
        android:layout_toRightOf="@id/imageSumLikes"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30sp"/>

    <TextView
        android:id="@+id/sumComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@+id/nickName"
        android:layout_toEndOf="@+id/imageSumComments"
        android:layout_marginTop="13dp"
        android:layout_marginStart="7sp"/>

    <ImageView
        android:id="@+id/imageSumFriends"
        android:layout_width="32sp"
        android:layout_height="32sp"
        android:src="@drawable/friendship"
        android:layout_below="@+id/nickName"
        android:layout_toLeftOf="@+id/sumFriends"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="7sp"/>

    <TextView
        android:id="@+id/sumFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@+id/nickName"
        android:layout_toLeftOf="@+id/imageSumFollows"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="20sp"/>

    <ImageView
        android:id="@+id/imageSumFollows"
        android:layout_width="32sp"
        android:layout_height="32sp"
        android:src="@drawable/follow"
        android:layout_below="@+id/nickName"
        android:layout_toLeftOf="@id/sumFollows"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="7sp"/>

    <TextView
        android:id="@+id/sumFollows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@+id/nickName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="20dp"/>


    <ListView
        android:id="@+id/my_status_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bg_home"
        android:layout_marginBottom="52dp"
        android:scrollbars="none" />


</RelativeLayout>