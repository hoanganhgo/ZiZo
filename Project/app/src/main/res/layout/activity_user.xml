<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="-25dp"
        android:src="@drawable/bg_home" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/avatarUser"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/sky"/>
    <TextView
        android:id="@+id/nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/avatarUser"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/addFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kết bạn"
        android:textColor="@color/black"
        android:background="@drawable/background_button_1"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/nickName"/>

    <Button
        android:id="@+id/addFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theo dõi"
        android:textColor="@color/black"
        android:background="@drawable/background_button_1"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20sp"
        android:layout_below="@+id/nickName" />

    <ListView
        android:id="@+id/status_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/addFollow"
        android:layout_marginTop="5dp"/>


</RelativeLayout>