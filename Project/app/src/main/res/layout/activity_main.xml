<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo_zizo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/nh_p_t_n_t_i_kho_n"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logo"
            android:width="350dp"
            android:layout_marginTop="15dp"/>

        <ProgressBar
            android:id="@+id/progressBar_Login"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:background="@drawable/circle_shape"
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:visibility="invisible"
            android:progress="0" />

        <EditText
            android:id="@+id/PassWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/nh_p_password"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Email"
            android:width="350dp"
            android:layout_marginTop="20dp" />

        <CheckBox
            android:id="@+id/saveUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            android:layout_below="@+id/PassWord"
            android:shadowColor="@color/sky"
            android:text="@string/l_u_t_i_kho_n_v_m_t_kh_u"/>

        <Button
            android:id="@+id/signIn_Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ng_nh_p"
            android:background="@drawable/background_button_2"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/saveUserName"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ng_k"
            android:background="@drawable/background_button_2"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/signIn_Click"
            android:layout_marginTop="15dp"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>