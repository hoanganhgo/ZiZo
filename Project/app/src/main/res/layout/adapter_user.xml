<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_selection">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/avatar_user"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/user"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/sky"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/nickName_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nick name"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/btn_addFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kết bạn"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_post_button"/>
</LinearLayout>