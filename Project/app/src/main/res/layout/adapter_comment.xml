<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/avatar_commentator"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/user"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/sky"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/commentator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_above="@+id/message_content"
        android:layout_toRightOf="@id/avatar_commentator"/>

    <TextView
        android:id="@+id/comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:background="@drawable/background_comment_box"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_toEndOf="@id/avatar_commentator"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp" />
    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_content"
        android:layout_toEndOf="@id/avatar_commentator"
        android:layout_marginStart="10dp"
        android:textSize="8sp" />
</RelativeLayout>