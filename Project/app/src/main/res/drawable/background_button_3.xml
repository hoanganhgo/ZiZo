<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F4F4F7" />
            <gradient android:angle="-90" android:startColor="#C7E1F8" android:endColor="#6EC2FA"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#BFC7FC" />
            <solid android:color="#4A62FA"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F9F9FC" />
            <gradient android:angle="-90" android:startColor="#D8DFF8" android:endColor="#526FFA" />
        </shape>
    </item>
</selector>