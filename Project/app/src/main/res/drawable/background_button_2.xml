<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#7BD1FC" />
            <gradient android:angle="-90" android:startColor="#C7E1F8" android:endColor="#56BBF7"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FCFFFE" />
            <solid android:color="#38B7FC"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#85D4F8" />
            <gradient android:angle="-90" android:startColor="#A3DCFD" android:endColor="#01A8F7" />
        </shape>
    </item>
</selector>